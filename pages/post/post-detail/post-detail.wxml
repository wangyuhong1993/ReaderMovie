<view class='container'>
  <image class='head-image' src='{{postData.headImgSrc}}'></image>
  <image catchtap='onMusicTap' class='audio' src='/images/music/music-start.png'></image>
  <view class='author-date'>
    <image class='avatar' src='{{postData.avatar}}'></image>
    <text class='author'>{{postData.author}}</text>
    <text class='const-text'>发表于</text>
    <text class='date'>{{postData.datetime}}</text>
  </view>
  <text class='title'>{{postData.title}}</text>
  <view class='tool'>
    <view class='circle-img'>
      <image wx:if="{{collected}}" class="icon" catchtap="onColletionTap"  src='/images/icon/collection.png'></image>
      <image wx:else class="icon" catchtap="onColletionTap"  src='/images/icon/collection-anti.png'></image>
      <image class="icon share-img" src="/images/icon/share-anti.png" catchtap="onShareTap"  src='/images/icon/collection-anti.png'></image>
    </view>
    <view class='horizon'></view>
  </view>
  <text class='detail'>{{postData.detail}}</text>
</view>