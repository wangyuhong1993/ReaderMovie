/* pages/post/post-detail.wxss */
.container {
  display: flex;
  flex-direction: column;
}
.head-image {
  width: 100%;
  height: 460rpx;
}
.audio {
  position: absolute;
  left: 50%;
  top: 180rpx;
  opacity: 0.6;
  width: 102rpx;
  height: 100rpx;
  transform: translateX(-50%);

}
.author-date {
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 20rpx;
}
.author-date .avatar {
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
}
.author-date .author {
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #666;
}
.author-date .const-text {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}
.author-date .date {
  font-size: 24rpx;
  margin-left: 30rpx;
  vertical-align: middle;
  color: #999;
}
.title {
  font-size: 36rpx;
  font-weight: 700;
  margin: 10rpx 0 0 40rpx;
  letter-spacing: 2px;
  color: #4b556c;
}
.tool {
  margin-top: 20rpx;
}
.tool .circle-img {
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}
.tool .icon {
  width: 90rpx;
  height: 90rpx;
}
.tool .share-img {
  margin-left: 30rpx;
}
.tool .horizon {
  position: relative;
  width: 660rpx;
  height: 1rpx;
  background-color: #e5e5e5;
  top: 46rpx;
  margin: 0 auto;
  z-index: -1;
}
.detail {
  color: #666;
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
}