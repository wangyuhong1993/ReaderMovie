/* 新闻列表 */
.post-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
  background-color: #fff;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  padding-bottom: 5px;
}
.post-author-date {
  margin: 10rpx 0 20rpx 20rpx;
}
.post-author-date .post-author {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.post-author-date .post-date {
  margin-left: 20px;
  vertical-align: middle;
}
.post-container .post-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
}
.post-container .post-image{
    width:100%;
    height:340rpx;
     margin:auto 0; 
    margin-bottom: 15px;
}
.post-container .post-content {
  color:#666;
  font-size:28rpx;
  margin-bottom:20rpx;
  margin-left: 20rpx;
  letter-spacing:2rpx;
  line-height: 40rpx;
}
.post-like {
  font-size: 13px;
  line-height: 16px;
  margin-left: 10px;
} 
.post-like .post-like-image{
  width: 16px;
  height: 16px;
  margin-right: 8px;
  vertical-align: middle;
}
.post-like .post-like-font{
  margin-right: 20px;
  vertical-align: middle;
}