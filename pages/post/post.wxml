<!--pages/post/post.wxml-->
<import src="./post-item/post-item.wxml" />
<view>
  <!-- 轮播图 -->
  <swiper indicator-dots="true" indicator-active-color="#405f80">
    <swiper-item>
      <image src="/images/wx.png"></image>
    </swiper-item>
    <swiper-item>
      <image src="/images/vr.png"></image>
    </swiper-item>
    <swiper-item>
      <image src="/images/iqiyi.png"></image>
    </swiper-item>
  </swiper>
  <!-- 新闻列表 -->
  <block wx:for="{{postList}}" wx:for-item="item" wx:for-index="idx" wx:key="unique">
    <view bindtap='onPostTap' data-post-id='{{item.postId}}'>
       <template is="postItem" data="{{...item}}" /> 
    </view>
  </block>
</view>
